<!-- The Modal -->
<div class="modal sm-10" id="ask-question">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">New Question</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
        <div class="modal-body">
            <%= form_for :question,url:"/questions",html:{class:"form-horizontal"} do |f| %> 
                <div class="form-group">
                    <label for="inputEmail"  class="col-sm-2 control-label">
                        Email
                    </label>
                    <div class="col-sm-10">
                        <input type="email" name="question[email]" class="form-control" id="questionEmail" placeholder="Email" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputQuestion" class="col-sm-2 control-label">
                        Question
                    </label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="question[body]" id="inputQuestion" placeholder="What would you like to know" required></textarea>
                    </div>
                </div>
                <div class="modal-footer col-10">
                    <button type="button" id="close" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button type="submit" id="submitQuestion" class="btn btn-primary">Submit</button>
                </div>
            <% end %> 
        </div>
    </div>
  </div>
</div>
<script type="text/javascript">

function closeOnEsc(event) {
    if(event.keyCode === 27){
        consol.log("esc pressed")
    }
}


function submitOnEnter(event){
    if(event.which === 13 && !event.shiftKey){
        event.preventDefault();
        document.getElementById("submitQuestion").click()
    }
}

document.getElementById("ask-question").addEventListener("keypress", closeOnEsc);
document.getElementById("inputQuestion").addEventListener("keypress", submitOnEnter);

</script>